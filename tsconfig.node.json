{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": ["vite.config.*", "vitest.config.*", "cypress.config.*", "nightwatch.conf.*", "playwright.config.*" , "auto-imports.d.ts"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node" , "element-plus"]
  }
}
